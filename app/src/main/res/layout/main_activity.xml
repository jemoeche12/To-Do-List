<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título que muestra la fecha -->
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tareas para: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Campo para escribir nueva tarea -->
    <EditText
        android:id="@+id/etNuevaTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu tarea aquí..."
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <!-- Botón para agregar tarea -->
    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Tarea"
        android:textSize="16sp"
        android:layout_marginBottom="20dp" />

    <!-- Contenedor donde aparecerán las tareas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutTareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>